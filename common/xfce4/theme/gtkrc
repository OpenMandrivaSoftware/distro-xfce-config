# original idea tpg@mandriva.org

style "xfce-panel"
{

    # mandriva-xfce-panel.png is same as main panel height, which is 32 px
    bg_pixmap[NORMAL] = "mandriva-xfce-panel.png"
    bg_pixmap[SELECTED] = "mandriva-xfce-panel.png"
}

# make desktop's icons label transparent
style "xfdesktop-icon-view"
{

    XfdesktopIconView::label-alpha = 10
    fg[NORMAL] = "#ffffff"
    fg[SELECTED] = "#ffffff"
}

class "Xfce*Panel*" style "xfce-panel"
widget_class "*Xfce*Panel*" style "xfce-panel"
widget_class "*XfdesktopIconView*" style "xfdesktop-icon-view"
